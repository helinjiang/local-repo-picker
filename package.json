{
  "name": "local-repo-picker",
  "version": "0.4.0",
  "description": "Local repository picker with cache and preview for large workspaces",
  "keywords": [
    "repo",
    "git",
    "picker",
    "cli",
    "tui",
    "ink",
    "workspace"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/helinjiang/local-repo-picker"
  },
  "homepage": "https://github.com/helinjiang/local-repo-picker#readme",
  "bugs": {
    "url": "https://github.com/helinjiang/local-repo-picker/issues"
  },
  "type": "module",
  "bin": {
    "repo": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./ui": {
      "types": "./dist/ui/index.d.ts",
      "import": "./dist/ui/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "init": "npm install && npm run web:init",
    "build": "npm run server:build && npm run web:build",
    "server:build": "tsc -p tsconfig.json && node scripts/append-js-extensions.mjs",
    "prepublishOnly": "npm run build",
    "web:init": "npm --prefix webapp install",
    "web:dev": "npm --prefix webapp run dev",
    "web:build": "npm --prefix webapp run build",
    "web:preview": "npm --prefix webapp run preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier . --write && eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format:check": "prettier . --check",
    "demo:cache": "npm run build && node demo/cache.mjs",
    "demo:tui": "npm run build && node demo/tui.mjs",
    "demo:tui-real": "npm run build && node demo/tui-real.mjs"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.0.0",
    "@fastify/static": "^7.0.1",
    "env-paths": "^3.0.0",
    "execa": "^8.0.1",
    "fastify": "^4.29.0",
    "p-limit": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.5",
    "@eslint/js": "^9.10.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.10.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.7.0",
    "@vitest/coverage-v8": "^2.1.9",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=18"
  }
}
